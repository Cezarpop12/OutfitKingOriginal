@using OutfitKing.Models
@model GebruikerVM 
@{
    ViewData["Title"] = "Log in";
}

<i><center>Inlogpagina</center></i>

<html>
<head>
<style>
.btn-primary {
margin-bottom: 120px;
}
</style>
</head>

@if (Model.Retry)
{
  <div class = "row">
    <p style="color:red">
      Uw gebruikersnaam en/of wachtwoord is niet correct!
     </p>
   </div>
}

<form class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
         class="img-fluid" alt="Phone image">
       </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
    </form>
          
<form method ="post" asp-action=Index>
  <div class="form-outline mb-4">
     <label asp-for="Gerbuikersnaam">Gebruikersnaam</label>
     <input asp-for="Gerbuikersnaam" class="form-control" />
     <span asp-validation-for="Gerbuikersnaam" style="color:red"></span>
    </div>
  <div class="form-outline mb-4">  
     <label asp-for="Wachtwoord">Wachtwoord</label>
     <input asp-for="Wachtwoord" type="password" class="form-control" /> 
     <span asp-validation-for="Wachtwoord" style="color:red"></span>
    </div>                 
  <div class="d-flex justify-content-around align-items-center mb-4">
    <div class="form-check">
       <input class="form-check-input" type="checkbox" value="" id="checkbox" checked />
       <label class="form-check-label" for="checkbox"> Onthoud mij </label>
      </div>
     <a href="#!">Wachtwoord vergeten?</a>  
    </div>
     <input type="submit" value="Log In" class="btn btn-primary" />
       <a asp-controller="Inlog" asp-action="AccountAanmaken" class="btn btn-primary">
         Account aanmaken  
       </a>         
    </form>
   </div>
  </div>
 </div>
</section>






